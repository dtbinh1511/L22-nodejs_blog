<div class='mt-4'>
	<h3>Cập nhật khóa học</h3>

	<form method='POST' action='/courses/{{courses._id}}?_method=PUT'>
		<div class='form-group'>
			<label for='name'>Tên khóa học</label>
			<input
				type='text'
				class='form-control'
				id='name'
				placeholder='Tên khóa học'
				name='name'
				value='{{courses.name}}'
			/>
		</div>
		<div class='form-group'>
			<label for='description'>Mô tả khóa học</label>
			<textarea
				class='form-control'
				id='description'
				placeholder='Mô tả khóa học'
				name='description'
			>{{courses.description}}</textarea>
		</div>
		<div class='form-group'>
			<label for='videoId'>Mã video</label>
			<input
				type='text'
				class='form-control'
				id='videoId'
				placeholder='Nhập mã video'
				name='videoId'
				value='{{courses.videoId}}'
			/>
		</div>
		<div class='form-group'>
			<label for='level'>Cấp độ khóa học</label>
			<input
				type='text'
				class='form-control'
				id='level'
				placeholder='Cấp độ khóa học'
				name='level'
				value='{{courses.level}}'
			/>
		</div>

		<button type='submit' class='btn btn-primary'>Cập nhật khóa học</button>
	</form>
</div>