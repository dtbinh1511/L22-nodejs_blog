<div class='mt-4'>
	<h3>Đăng khóa học</h3>

	<form method='POST' action='/courses/store'>
		<div class='form-group'>
			<label for='name'>Tên khóa học</label>
			<input
				type='text'
				class='form-control'
				id='name'
				placeholder='Tên khóa học'
				name='name'
			/>
		</div>
		<div class='form-group'>
			<label for='description'>Mô tả khóa học</label>
			<textarea
				class='form-control'
				id='description'
				placeholder='Mô tả khóa học'
				name='description'
			></textarea>
		</div>
		<div class='form-group'>
			<label for='videoId'>Mã video</label>
			<input
				type='text'
				class='form-control'
				id='videoId'
				placeholder='Nhập mã video'
				name='videoId'
			/>
		</div>
		<div class='form-group'>
			<label for='level'>Cấp độ khóa học</label>
			<input
				type='text'
				class='form-control'
				id='level'
				placeholder='Cấp độ khóa học'
				name='level'
			/>
		</div>

		<button type='submit' class='btn btn-primary'>Thêm khóa học</button>
	</form>
</div>